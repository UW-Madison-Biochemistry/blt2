{% extends 'base.html.twig' %}

{% block userActions %}
    <li><a href="/" tabindex="-1">Back to Menu</a></li>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {#{% stylesheets#}
    {#'css/entity.less' filter='cssrewrite' %}#}
