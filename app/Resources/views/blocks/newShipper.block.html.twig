{% block newShipper %}
    <div id="addNewShipperModal" class="modal" tabindex="-1" role="dialog" aria-labelledby="newShipperModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="newShipperTitle">Add a new Shipper</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label for="newShipperName" class="control-label col-md-4">Shipper Name:</label>
                                <div id="newShipperNameDiv" class="col-md-6">
                                    <input type="text" id="newShipperName" class="form-control" placeholder="Ex. USPS" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <label id="newShipperLabel" class="col-md-10 col-md-offset-1 label label-primary">
                            New Shipper Name must be less than 50 characters
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="button" id="submitNewShipper" class="btn btn-default">Submit</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block newShipperJavascripts %}
    {% javascripts
    'js/blocks/newShipper.block.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}