{% extends 'base.html.twig' %}

{% block userActions %}
    <li><a href="/" tabindex="-1">Back to menu</a></li>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {#{% stylesheets#}
    {#'css/entity.less' filter='cssrewrite' %}#}
