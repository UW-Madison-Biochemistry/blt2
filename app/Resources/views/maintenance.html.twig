{% extends 'base.html.twig' %}

{% block userActions %}
    <li><a href="/" tabindex="-1">Back to Menu</a></li>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets
    'css/maintenance.less' filter='cssrewrite' %}
    <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="packageBlock">
            <div class="row">
                <div class="col-md-12">
                    <p class="control-label"><strong>Package</strong> - Searchable textbox of Packages</p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <input type="text" id="maintenancePackageNumber" class="form-control" placeholder="Tracking Number" />
                </div>
            </div>

            <div class="row">
                <div id="packageSearch" class="col-md-12">

                </div>
            </div>
        </div>

        <hr />

        <div class="shipperBlock">
            <div class="row">
                <div class="col-md-12">
                    <p class="control-label"><strong>Shipper</strong> - List of Shippers</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-striped table-hover table-condensed">
                        <thead>
                        <tr>
                            <th>Shipper ID</th>
                            <th>Shipper's Name</th>
                            <th colspan="3">Available Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for shipper in shippers %}
                            <tr>
                                <td>
                                    {{ shipper.getId() }}
                                </td>
                                <td>
                                    {{ shipper.getName() }}
                                </td>
                                <td>
                                    <button type="button" id="{{ shipper.getId() }}" class="shipper btn btn-sm btn-primary" disabled>List</button>
                                </td>
                                <td>
                                    {% if shipper.getEnabled() == 1 %}
                                        <button type="button" id="{{ shipper.getId() }}" class="shipper btn btn-sm btn-danger">Disable</button>
                                    {% else %}
                                        <button type="button" id="{{ shipper.getId() }}" class="shipper btn btn-sm btn-success">Enable</button>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <hr />

        <div class="vendorBlock">
            <div class="row">
                <div class="col-md-12">
                    <p class="control-label"><strong>Vendor</strong> - Searchable textbox of Vendors</p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <input type="text" id="maintenanceVendorName" class="form-control" placeholder="Vendor Name" />
                </div>
            </div>

            <div class="row">
                <div id="vendorSearch" class="col-md-12">

                </div>
            </div>
        </div>

        <hr />

        <div class="receiverBlock">
            <div class="row">
                <div class="col-md-12">
                    <p class="control-label"><strong>Receiver</strong> - List of Receivers</p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <table class="table table-striped table-hover table-condensed">
                        <thead>
                        <tr>
                            <th>Receiver ID</th>
                            <th>Receiver's Name</th>
                            <th>Receiver's Room Number</th>
                            <th colspan="3">Available Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for receiver in receivers %}
                            <tr>
                                <td>
                                    {{ receiver.getId() }}
                                </td>
                                <td>
                                    {{ receiver.getName() }}
                                </td>
                                <td>
                                    {{ receiver.getDeliveryRoom() }}
                                </td>
                                <td>
                                    <button type="button" id="{{ receiver.getId() }}" class="receiver btn btn-sm btn-primary" disabled>List</button>
                                </td>
                                <td>
                                    {% if receiver.getEnabled() == 1 %}
                                        <button type="button" id="{{ receiver.getId() }}" class="receiver btn btn-sm btn-danger">Disable</button>
                                    {% else %}
                                        <button type="button" id="{{ receiver.getId() }}" class="receiver btn btn-sm btn-success">Enable</button>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts
    'js/maintenance.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}