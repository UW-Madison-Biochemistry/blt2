<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {% stylesheets
            '../components/jquery-ui/themes/base/jquery-ui.min.css'
            '../vendor/twbs/bootstrap/dist/css/bootstrap.min.css' filter='cssrewrite' %}

            <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('images/favicon.ico') }}" />
    </head>
    <body>
        {% block body %}
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#actions"aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <span class="navbar-brand">BLT</span>
                    </div>

                    <div id="actions" class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">
                            {% block userActions %}

                            {% endblock %}
                            <li role="separator" class="divider"></li>
                            <li><a href="logout" tabindex="-1">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        {% endblock %}

        {% block javascripts %}
            {% javascripts
            '../components/jquery/jquery.min.js'
            '../components/jquery-ui/jquery-ui.min.js'
            '../vendor/twbs/bootstrap/dist/js/bootstrap.min.js' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>
